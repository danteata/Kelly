<%=form_for(@supervisor, :html => { :multipart => true }, :validate => true) do |f| %>

  <br/>

  <div class="field">
    <%= f.fields_for :profile do |builder| %>
      <%= builder.label :fName %>
      <%= builder.text_field :fName %>

  <br/>
      <%= builder.label :oName %>
      <%= builder.text_field :oName %>

  <br/>
      <%= builder.label :lName %>
      <%= builder.text_field :lName %>
    <% end -%>
  </div>

  <br/>
  <div class="field">
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </div>
  <br/>
  <div class="field">


    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <br/>

  <div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <br/>

  <div class="field">
    <%= f.submit "Register" %>
  </div>
